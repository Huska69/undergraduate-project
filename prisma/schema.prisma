generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}
model User {
  id           String    @id @default(auto()) @map("_id") @db.ObjectId
  email        String    @unique
  password     String    // Required for signup
  name         String?   // Optional
  age          Int?      // Optional
  sex          String?   // Optional
  pregnancy    Boolean?  // Optional
  height       Int?      // Optional
  weight       Int?      // Optional
  contact      Int?      // Optional
  blood        String?   // Optional
  allergies    String?   // Optional
  medCond      String?   // Optional
  meds         String?   // Optional
}